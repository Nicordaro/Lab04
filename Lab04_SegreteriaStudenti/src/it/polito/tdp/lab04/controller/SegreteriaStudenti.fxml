<BorderPane xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.lab04.controller.SegreteriaStudentiController">
   <top>
      <Label text="Lab3_Segreteria Studenti" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" top="10.0" />
         </BorderPane.margin></Label>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox />
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label alignment="CENTER" text="Corso:" />
                  <ComboBox fx:id="comboBox" onAction="#doSelectCourse" promptText="Corsi">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="btnSearchSubscribers" mnemonicParsing="false" onAction="#doSearchSubscribers" text="Cerca iscritti corso" />
            <HBox fx:id="txtName" alignment="CENTER_LEFT">
               <children>
                  <Label text="Studente">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtID" onAction="#doComplete" promptText="Matricola">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnComplete" mnemonicParsing="false" onAction="#doComplete" style="-fx-background-color: green;" text="âˆš" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <TextField editable="false" promptText="Nome">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="txtSurname" editable="false" promptText="Cognome" />
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <AnchorPane prefHeight="53.0" prefWidth="586.0">
               <children>
                  <Button fx:id="btnSearchCourses" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#doSearchCourses" text="Cerca corsi" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="14.0" />
                  <Button fx:id="btnSubscribe" layoutX="513.0" layoutY="14.0" mnemonicParsing="false" onAction="#doSubscribe" text="Iscrivi" AnchorPane.rightAnchor="0.0" />
               </children>
            </AnchorPane>
            <TextArea fx:id="txtLog" editable="false" prefWidth="586.0">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextArea>
            <HBox alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="586.0">
               <children>
                  <Button fx:id="btnReset" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#doReset" text="Reset" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
